layout {
    pane edit="app/src/main.rs" 
    pane stacked=true {
        pane command="cargo" {
            args "build"
            start_suspended true
        }
        pane command="cargo" {
            args "embed"
            start_suspended true
        }
    }
    pane size=1 borderless=true {
        plugin location="zellij:compact-bar"
    }
}
